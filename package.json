{
  "name": "vue-reader",
  "version": "1.3.0",
  "type": "module",
  "main": "lib/vue-reader.cjs.js",
  "module": "lib/vue-reader.es.js",
  "files": [
    "lib"
  ],
  "types": "lib/src/packages/index.d.ts",
  "keywords": [
    "vue3",
    "vue2",
    "epub",
    "epubjs",
    "reader"
  ],
  "homepage": "https://jinhuan138.github.io/vue-reader/",
  "repository": {
    "type": "git",
    "url": "git@github.com:jinhuan138/vue-reader.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "format": "prettier --write src/packages/**/*.{ts,vue}",
    "docs:dev": "npm -C docs run docs:dev",
    "docs:build": "npm -C docs run docs:build",
    "docs:preview": "npm -C docs run docs:preview",
    "reader": "npm -C reader run dev"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jinhuan138/vue-reader/issues"
  },
  "dependencies": {
    "epubjs": "^0.3.93"
  },
  "peerDependencies": {
    "vue": ">=3.5.0"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@vitejs/plugin-vue": "^6.0.1",
    "epub": "^1.3.0",
    "node-vibrant": "^4.0.3",
    "prettier": "^2.8.7",
    "terser": "^5.44.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-tsconfig-paths": "^5.1.4",
    "vue": "^3.5.22",
    "vue-reader": "catalog:"
  },
  "browserslist": [
    "defaults",
    "not ie < 8",
    "last 2 versions",
    "> 1%",
    "iOS 7",
    "last 3 iOS versions"
  ],
  "packageManager": "pnpm@9.6.0",
  "preinstall": "npx only-allow pnpm"
}
